{
    "manifest_version": 2,
    "name": "basketty",
    "version": "0.1.7",
    "description": "basketty",
    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["https://*/*"]
    }],
    "background": {
        "persistent": false,
        "scripts": ["bg.js"]
      },
    "permissions": [ "cookies", "http://*/*", "https://*/*" ],
    "browser_action": {
        "default_icon": {
          "16": "images/icon.png",
          "24": "images/icon.png",  
          "32": "images/icon.png"   
        },
        "default_title": "Google Mail", 
        "default_popup": "popup.html"
      }
}
